<!-- Draw the title if provided, if not redirect to default page -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message Block to display if needed -->
<%- messages() %>

<!-- Display errors if needed -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
   </ul>
<% } %>

<!-- Login Form -->
<form action="/account/login" method="post">

    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" placeholder="Your email..." required value="<%= locals.account_email %>">

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" placeholder="Your password..." required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <span class="astric-paragraph">* Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>

    <button type="submit" class="action-button">Login</button>

</form>

<p id="noAccount">No account? <a href="../../account/register/">Sign-up</a></p>