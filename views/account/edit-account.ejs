<!-- Draw the title if provided, if not redirect to default page -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message Block to display if needed -->
<%- messages() %>

<!-- Display errors if needed -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% console.log(error.msg); %>
            <% if(error.msg != "Invalid value") { %>
                <li><%= error.msg %></li>
            <% } %>
        <%  }) %>
   </ul>
<% } %>


<form action="/account/edit-user" method="post">
    <h2>Your Account Information</h2>
    <label for="account_firstname">First name:</label>
    <input type="text" id="account_firstname" name="account_firstname" placeholder="Your First Name..." required value="<%= locals.account_firstname %>">

    <label for="account_lastname">Last name:</label>
    <input type="text" id="account_lastname" name="account_lastname" placeholder="Your Last Name..." required value="<%= locals.account_lastname %>">

    <label for="account_email">Email Address:</label>
    <input type="email" id="account_email" name="account_email" placeholder="Your email address..." required value="<%= locals.account_email %>">

    <button type="submit" class="action-button">Update Information</button>

    <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
</form>

<form action="/account/edit-password" method="post">
    <h2>Change Password</h2>

    <label for="account_password">Password:</label>
    <div class="input-group">
        <input type="password" id="account_password" name="account_password" placeholder="*Password..." required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span id="pswdBtn">Show</span>
    </div>
    <span class="astric-paragraph">* Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>

    <button type="submit" class="action-button">Change Password</button>
    
    <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
</form>

<ul class="menu-list">
    <li class="menu-item"><a href="../../account">Back to Account Manager</a></li>
</ul>