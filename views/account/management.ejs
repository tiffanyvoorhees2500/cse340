<!-- Draw the title if provided, if not redirect to default page -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message Block to display if needed -->
<%- messages() %>

<!-- Display errors if needed -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% console.log(error.msg); %>
            <% if(error.msg != "Invalid value") { %>
                <li><%= error.msg %></li>
            <% } %>
        <%  }) %>
   </ul>
<% } %>

<div id="account-management">
    <section id="account-section">
        <h2>Welcome <%= account_firstname %>!</h2>
        <p>You're logged in.</p>
        <p class="menu-item"><a href="../../account/edit/<%= account_id %>">Edit Account Information</a></p>
    </section>

    <%- managementSection %>
</div>
