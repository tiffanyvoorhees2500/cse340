<!-- Draw the title if provided, if not redirect to default page -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message Block to display if needed -->
<%- messages() %>

<!-- Display errors if needed -->
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% console.log(error.msg); %>
            <% if(error.msg != "Invalid value") { %>
                <li><%= error.msg %></li>
            <% } %>
        <%  }) %>
   </ul>
<% } %>

<!-- Login Form -->
<form action="/inv/add-classification" method="post">

    <label for="classification_name">Classification:</label>
    <input type="text" id="classification_name" name="classification_name" placeholder="* New Classification Name..." required value="<%= locals.classification_name %>">
    <span class="astric-paragraph">* Classification Name must be alphabetical characters only with no spaces.</span>

    <button type="submit" class="action-button">Add Classification</button>

</form>
<ul class="menu-list">
    <li class="menu-item"><a href="../../inv">Back to Menu</a></li>
</ul>